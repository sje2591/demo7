<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo7.mapper.BoardMapper">

	<insert id="insertBoard"
		parameterType="com.example.demo7.dto.BoardDTO" useGeneratedKeys="false"
		keyProperty="boardIdx">
		<selectKey keyProperty="boardIdx" resultType="int"
			order="BEFORE">
			SELECT BOARDIDX.NEXTVAL FROM DUAL
		</selectKey>
		insert into t_board values( #{boardIdx},#{title} )
	</insert>

	<select id="selectBoardList"
		resultType="com.example.demo7.dto.BoardDTO">
		SELECT * FROM t_board
	</select>

	<select id="selectBoardDetail"
		resultType="com.example.demo7.dto.BoardDTO">
		SELECT * FROM t_board WHERE boardIdx=#{boardIdx}
	</select>
</mapper>